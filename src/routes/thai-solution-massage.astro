                    <div class="cs-link">
                        <picture class="cs-picture">
                            <img class="cs-icon" src="/assets/svgs/treatments/4.svg" loading="lazy" decoding="async" alt="icon" width="40" height="40" aria-hidden="true">
                        </picture>
